{
    "analysis": {
        "patterns": {
            "enabled": true,
            "min_occurrences": 2,
            "max_distance": 3
        },
        "dependencies": {
            "enabled": true,
            "max_depth": 5,
            "include_indirect": true
        },
        "suggestions": {
            "enabled": true,
            "max_suggestions": 10,
            "min_confidence": 0.7
        }
    },
    "workflow": {
        "mapping": {
            "enabled": true,
            "include_branches": true,
            "max_steps": 10
        },
        "optimization": {
            "enabled": true,
            "target_metrics": [
                "time",
                "resources",
                "quality"
            ]
        },
        "improvements": {
            "enabled": true,
            "categories": [
                "process",
                "tools",
                "documentation"
            ]
        }
    },
    "output": {
        "format": "markdown",
        "include_details": true,
        "include_examples": true
    }
} 